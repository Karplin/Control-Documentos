    ViewBag.Title = "Busquedadepafecha";
}

<h2>Buscar por Departamento - Rango de Fecha</h2>


<script type="text/javascript">
    $(function ()
    {
        $('.date-picker').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true
        });

    });

</script>

     <form action="resultadodepafecha" method="post">

            @Html.TextBox("fechaini", "Fecha Inicial", new { @class = "date-picker" })
            @Html.TextBox("fechafinal", "Fecha Final", new { @class = "date-picker" })


    <input type="submit" value="Buscar" class="btn btn-success" />

    </form>

