@model IEnumerable<CapaEntidad.DEPARTAMENTO>

<link href="~/Content/registro.css" rel="stylesheet" />

@{
    ViewBag.Title = "Details";
}

<h2>Listado</h2>

<p>
    @Html.ActionLink("Agregar Departamento", "Create")
</p>

<p>
    @Html.ActionLink("Editar Departamento", "Edit")
</p>

<p>
    @Html.ActionLink("Borrar Departamento", "Delete")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Siglas)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siglas)
            </td>
        </tr>
    }

</table>

